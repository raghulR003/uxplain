  "author": "Uxplain",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axe-core": "^4.8.0",
    "commander": "^11.1.0",
    "css-tree": "^2.3.0",
    "diff": "^5.1.0",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/css-tree": "^2.3.10",
    "@types/jest": "^29.0.0",
    "@types/jsdom": "^21.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uxplain/ui-context-mcp-server"
  },
